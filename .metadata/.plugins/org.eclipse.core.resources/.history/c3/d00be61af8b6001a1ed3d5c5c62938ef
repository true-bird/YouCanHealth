<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="userMapper">

	<!-- 동훈 -->
	<insert id="insertUserInit" parameterType="java.util.HashMap">
    INSERT INTO INITIATE
    (SEQ,ID,PASSWORD,NAME,BIRTH,SEX,EXERDATE,MANAGER) 
    VALUES
    (
       SEQ_INITIATE.NEXTVAL
       ,#{id}
       ,#{password}
       ,#{name}
       ,#{birth}
       ,#{sex}
       ,#{exerdate}
       ,'회원'
    )
    </insert>
    
    <!-- 진희 -->
    <!-- 유저 정보 전체 출력 -->
	<select id="selectUserAllList"
		resultType="com.matnagu.myHell.user.dto.UserDto">
		SELECT SEQ, ID, PASSWORD, NAME, BIRTH,SEX,EXERDATE,RATING, MANAGER
		FROM INITIATE
		<!-- ORDER BY NAME ASC -->
	</select>

	<select id="selectUserId"
		parameterType="String"
		resultType="com.matnagu.myHell.user.dto.UserDto">
		SELECT SEQ, ID, PASSWORD, NAME, BIRTH,SEX,EXERDATE,RATING, MANAGER
		FROM INITIATE
		WHERE
		ID = #{id}
		<!-- ORDER BY NAME ASC -->
	</select>
	
    <!-- 내가 고른 루틴 삽입 -->
	<insert id="insertUserRoutine" parameterType="java.util.HashMap">
    INSERT INTO USER_ROUTINE
    (USER_SEQ,ROUTINE_ID) 
    VALUES
    (	
    	#{userSeq},
    	#{routineId}
    )
    </insert>
    
    <delete id="deleteUserRoutine" parameterType="int">
	DELETE FROM USER_ROUTINE
	WHERE USER_SEQ = #{userSeq} and ROUTINE_ID = #{routineId}
	</delete>
	
    <delete id="deleteUserCustomRoutine" parameterType="int">
	DELETE FROM USER_ROUTINE_LIST
	WHERE USER_SEQ = #{userSeq} and ROUTINE_ID = #{routineId}
	</delete>
    
    
    <select id="selectUserRoutine"
		parameterType="int" resultType="int">
		SELECT 
		ROUTINE_ID
		FROM USER_ROUTINE
		WHERE
		USER_SEQ = #{userSeq}
		<!-- ORDER BY NAME ASC -->
	</select>
	
	<select id="selectUserRoutineCheck"  parameterType="java.util.HashMap"
	resultType="int">
	SELECT COUNT(*)
	FROM INITIATE
	WHERE ID= #{id}
	</select>
	
	
	<select id="selectUserCustomRoutine"
		parameterType="int" resultType="com.matnagu.myHell.routine.dto.RoutineDto">
		SELECT 
		ROUTINE_ID as ID,
		ROUTINE_NAME as NAME
		FROM USER_ROUTINE_LIST
		WHERE
		USER_SEQ = #{userSeq}
		<!-- ORDER BY NAME ASC -->
	</select>
	
	
	
	<update id="updateUserInfo" parameterType="java.util.HashMap">
	UPDATE INITIATE
	SET
		EXERDATE=#{exerdate}
		
		WHERE seq=#{seq}	
	
	</update>
	
	<update id="updatePassword" parameterType="java.util.HashMap">
	UPDATE INITIATE 
	SET
	PASSWORD =#{Repw}
	WHERE ID = #{id}
	</update>
	
	<delete id="deleteUser" parameterType="int">
	DELETE FROM INITIATE
	WHERE SEQ = #{seq}
	</delete>
	
	
	<!-- 아이디 중복 체크 -->
	<select id="idCheck" resultType="int">
	SELECT COUNT(*)
	FROM INITIATE
	WHERE ID= #{id}
	</select>
	<!-- 종호 -->
	<select id="selectUserLikeSports" parameterType="String" resultType="com.matnagu.myHell.sports.dto.SportsLikeDto">
		SELECT
		SEQ,
		ID,
		EX_NAME
		FROM SPORTSLIKE
		WHERE
		ID = #{id}
	</select>
	
	<delete id="deleteSportsLike" parameterType="int">
		DELETE
		FROM SPORTSLIKE
		WHERE
		SEQ= #{seq}
	</delete>
	
</mapper>
  