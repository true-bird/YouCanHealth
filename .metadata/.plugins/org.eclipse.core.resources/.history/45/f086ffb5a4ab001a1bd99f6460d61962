package com.matnagu.myHell.geustbook.controller;

import java.util.HashMap;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.matnagu.myHell.geustbook.dto.GuestbookDto;
import com.matnagu.myHell.geustbook.service.GuestbookServiceImpl;


@Controller
public class GuestbookController {

	@Autowired
	private GuestbookServiceImpl guestbookServiceImpl;
	
	@RequestMapping(value = "/index")
	public String index() {
		return "guestbook/index";
	}
	@RequestMapping(value = "/selectGuestbookAllList")//�쟾泥댁“�쉶
	public String selectGuestbookAllList(Model model) {
		List<GuestbookDto> guestbookList=
				guestbookServiceImpl.selectGuestbookAllList();
		model.addAttribute("list",guestbookList);
		return "guestbook/selectGuestbookAllList";
	}
	
	@RequestMapping(value = "/selectGuestbookListForm") //議곌굔議고쉶
	public String selectGuestbookListForm(Model model) {
		return "guestbook/selectGuestbookListForm";
	}
	
	@RequestMapping(value = "/insertGuestbookForm") //諛⑸챸濡� �옉�꽦
	public String insertGuestbookForm(Model model) {
		
		return "guestbook/insertGuestbookForm";
	}

	
	@RequestMapping(value = "/insertGuestbook") //諛⑸챸濡� �옉�꽦
	public String insertGuestbook(Model model,
			@RequestParam HashMap<String,String> paramMap) {
		guestbookServiceImpl.insertGuestbook(paramMap);
		return "redirect:/selectGuestbookAllList";
	}
}
 