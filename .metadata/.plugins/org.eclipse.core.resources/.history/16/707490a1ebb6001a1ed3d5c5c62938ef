	public void deleteUser(int seq);
	public int idCheck(HashMap<String, Object> paramMap);
	
	/* ---------- 동훈 ---------- */
	public void insertUserinit(HashMap<String,Object> paramMap);
	/* ------------------------ */
	
	/* ---------- 진희 ---------- */
	public List<UserDto> selectUserAllList();
