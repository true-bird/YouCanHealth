<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="userMapper">
	<!-- 신동훈 -->
	<insert id="insertUserInit" parameterType="java.util.HashMap">
    INSERT INTO INITIATE
    (SEQ,ID,PASSWORD,NAME,BIRTH,SEX,EXERDATE,MANAGER) 
    VALUES
    (
       SEQ_INITIATE.NEXTVAL
       ,#{id}
       ,#{password}
       ,#{name}
       ,#{birth}
       ,#{sex}
       ,#{exerdate}
       ,'회원'
    )
    </insert>
    
    <select id="selectUserInit"
    parameterType="String"
    resultType="com.matnagu.myHell.user.dto.UserInitDto">
    SELECT 
    ID,
    PASSWORD,
    NAME
    FROM INITIATE
    WHERE ID = #{id}
    </select> 
 
    <select id="selectUserInfo"
    resultType="com.matnagu.myHell.user.dto.UserInitDto">
    SELECT *
    FROM INITIATE
    WHERE ID = #{id}
    </select>
    
    <!-- 이진희 -->
    <!-- 유저 정보 전체 출력 -->
	<select id="selectUserAllList"
		resultType="com.mycompany.myapp.guestbook.dto.UserDto">
		SELECT SEQ, ID, PASSWORD, NAME, BIRTH,SEX,EXERDATE,RATING, MANAGER
		FROM INITIATE
		<!-- ORDER BY NAME ASC -->
	</select>

	<select id="selectUserId"
		resultType="com.mycompany.myapp.guestbook.dto.UserDto">
		SELECT SEQ, ID, PASSWORD, NAME, BIRTH,SEX,EXERDATE,RATING, MANAGER
		FROM INITIATE
		WHERE
		ID = #{id}
		<!-- ORDER BY NAME ASC -->
	</select>
</mapper>
  