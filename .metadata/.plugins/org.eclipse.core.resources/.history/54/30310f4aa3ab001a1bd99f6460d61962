package com.mycompany.myapp.geustbook.dao;

import java.util.ArrayList;
import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.mycompany.myapp.geustbook.dto.GuestbookDto;

@Repository //저장소
public class GuestbookDaoImpl implements IGuestbookDao{

	@Autowired
	private SqlSessionTemplate sqlSession;
	
	//Guestbook 전체 조회
	 public List<GuestbookDto> selectGuestbookAllList(){
		 List<GuestbookDto> GuestbookDtoList = new ArrayList<GuestbookDto>();
		 //Query 1. resultType 으로 리턴
		 GuestbookDtoList = sqlSession.selectList("guestbookMapper.selectGuestbookAllList");
		 
		 //Query 2.resultMap 으로 리턴
		 return GuestbookDtoList;
	 }

	@Override
	public int insertGuestbook() {
		List<GuestbookDto> GuestbookDtoList = new ArrayList<GuestbookDto>();
		//	Query 1. resultType 으로 리턴
		GuestbookDtoList = sqlSession.selectList("guestbookMapper.selectGuestbookAllList");
		
		//	Query 2.resultMap 으로 리턴
		return 1;
	}
	 
	 
}
