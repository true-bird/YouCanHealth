<mapper namespace="sportsMapper">
	<!--==========운동 목록 조회하기========== -->
	<!-- 운동목록(가슴) -->
	<select id="selectChestList"
		resultType="com.matnagu.myHell.sports.dto.SportsDto">
		SELECT SEQ,
		PART,
		EX_NAME,
		IMAGE_PARTS
		FROM SPORTS
		WHERE PART =
		'가슴'
		ORDER BY SEQ
	</select>
	<!-- 운동목록(등) -->
	<select id="selectBackList"
		resultType="com.matnagu.myHell.sports.dto.SportsDto">
		SELECT SEQ,
		PART,
		EX_NAME,
		IMAGE_PARTS
		FROM SPORTS
		WHERE PART =
		'등'
		ORDER BY SEQ
	</select>
	<!-- 운동목록(어깨) -->
	<select id="selectShoulderList"
		resultType="com.matnagu.myHell.sports.dto.SportsDto">
		SELECT SEQ,
		PART,
		EX_NAME,
		IMAGE_PARTS
		FROM SPORTS
		WHERE PART =
		'어깨'
		ORDER BY SEQ
	</select>
	<!-- 운동목록(복부) -->
	<select id="selectAbsList"
		resultType="com.matnagu.myHell.sports.dto.SportsDto">
		SELECT SEQ,
		PART,
		EX_NAME,
		IMAGE_PARTS
		FROM SPORTS
		WHERE PART =
		'복부'
		ORDER BY SEQ
	</select>
	<!-- 운동목록(하체) -->
	<select id="selectLowerList"
		resultType="com.matnagu.myHell.sports.dto.SportsDto">
		SELECT SEQ,
		PART,
		EX_NAME,
		IMAGE_PARTS
		FROM SPORTS
		WHERE PART =
		'하체'
		ORDER BY SEQ
	</select>
	<!-- 운동정보 조회 -->
	<select id="selectSportsInfo" parameterType="int"
		resultType="com.matnagu.myHell.sports.dto.SportsDto">
		SELECT SEQ,
		PART,
		EX_NAME,
		IMAGE,
		IMAGE_PARTS,
		IMAGE_GIF,
		LINK,
		EXPLAIN
		FROM SPORTS
		WHERE SEQ = #{seq}
	</select>
	<!-- 운동정보 조회 -->
	<select id="selectSportsInfo" parameterType="String"
		resultType="com.matnagu.myHell.sports.dto.SportsDto">
		SELECT SEQ,
		PART,
		EX_NAME,
		IMAGE,
		IMAGE_PARTS,
		IMAGE_GIF,
		LINK,
		EXPLAIN
		FROM SPORTS
		WHERE EX_NAME = #{sportName}
	</select>
